
@{
    ViewBag.Title = "Pictures and Videos";
}
<div class="container-fluid">
    <section>
        <div class="jumbotron text-center">
            <h1 class="text-center">
                <b class="text-uppercase"> @ViewBag.Title</b>
            </h1>
            <p style="color:white;font-style:italic"> 
              Our goal is to help others to help others who are less fortunate and our 
              Gallery shows how we making a difference.
            </p>
        </div>
    </section>
</div>
<hr />

<div id="fh5co-portfolio">
    <div class="container" style="margin-top:-70px">
        <div class="row row-bottom-padded-md">
            <div class="col-md-12">

                <ul id="fh5co-portfolio-list">

                    <li class="two-third" data-animate-effect="fadeIn" style="background-image: url(/Content/images/gallery/football.jpg)">
                        <a href="@Url.Action("Photos", "Home", new { galleryId = 0 }, null)" class="color-3">
                            <div class="case-studies-summary">
                                <span>Football </span>
                                <h2>Photos from our Football Event</h2>
                            </div>
                        </a>
                    </li>

                    <li class="one-third" data-animate-effect="fadeIn" style="background-image: url(/Content/images/gallery/farm.jpg); ">
                        <a href="@Url.Action("Photos", "Home", new { galleryId = 1 }, null)" class="color-4">
                            <div class="case-studies-summary">
                                <span>Farm Work</span>
                                <h2>See the work we have done in farming</h2>
                            </div>
                        </a>
                    </li>

                    <li class="one-third" data-animate-effect="fadeIn" style="background-image: url(/Photos/Construction/DSCF0222.JPG);">
                        <a href="@Url.Action("Photos", "Home", new { galleryId = 3 }, null)" class="color-6">
                            <div class="case-studies-summary">
                                <span>Our Constructions</span>
                                <h2>See what Shelter we are building and providing</h2>
                            </div>
                        </a>
                    </li>

                    <li class="two-third" data-animate-effect="fadeIn" style="background-image: url('/Photos/Productivity/WhatsApp Image 2018-07-24 at 02.57.52.jpeg'); ">
                        <a href="@Url.Action("Photos", "Home", new { galleryId = 2 }, null)" class="color-5">
                            <div class="case-studies-summary">
                                <span>Productivity</span>
                                <h2>Productivity and Team work</h2>
                            </div>
                        </a>
                    </li>

                    <li class="col-md-12">
                        <h1 class="text-center"><b> Playing Football and Having Fun</b> </h1>
                        <div class="container" style="width:80%; margin: 0 auto;">
                            <video width="800" style="width:100%; " controls>
                                <source src="~/Content/videos/playing_football.mp4" type="video/mp4">
                                Your browser does not support HTML5 video.
                            </video>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</div>


