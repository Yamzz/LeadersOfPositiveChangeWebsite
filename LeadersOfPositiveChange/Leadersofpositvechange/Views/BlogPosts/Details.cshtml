@model LOPC.Entities.Entities.BlogPost

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center">Blog Post Details</h1>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <hr>
        <dt>
            @*@Html.DisplayNameFor(model => model.ShortDescription)*@
            Short Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <hr>
        <dt>
            @Html.DisplayNameFor(model => model.Post) :
        </dt>

        <dd >
            @Html.DisplayFor(model => model.Post)
        </dd>
        <hr>
        <dt>
            @*@Html.DisplayNameFor(model => model.DateTime)*@
            Date/Time Posted :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <hr>
        <dt>
            @*@Html.DisplayNameFor(model => model.PostedBy)*@
            Posted By:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostedBy)
        </dd>
        <hr>
        <dt>
            @Html.DisplayNameFor(model => model.Image) :
        </dt>

        <dd>
            @{ 
                string filename = Path.GetFileName(Model.Image);
           }
            <img src="@Url.Content("~/Content/images/blog/" + filename)" width="300" height="220" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</p>
