@model LOPC.Entities.Entities.BlogPost

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Blog Post?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <hr>
        <dt>
            @*@Html.DisplayNameFor(model => model.ShortDescription)*@
            Short Description :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <hr>
        <dt>
            @Html.DisplayNameFor(model => model.Post) :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Post)
        </dd>
        <hr>
        <dt>
            @*@Html.DisplayNameFor(model => model.DateTime)*@
            Date/Time Posted :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <hr>
        <dt>
            @*@Html.DisplayNameFor(model => model.PostedBy)*@
            Posted By:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostedBy)
        </dd>
        <hr>
        <dt>
            @Html.DisplayNameFor(model => model.Image) :
        </dt>

        <dd>
            @{
                string filename = Path.GetFileName(Model.Image);
            }
            <img src="@Url.Content("~/Content/images/blog/" + filename)" width="300" height="220" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
